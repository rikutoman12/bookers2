<main>

  <%= render 'books/list', book: @book,user:@user %>

 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <% @users.each do |user| %>
        <td>
         <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
     </td>
        <td><%= user.name %></td>
        <td><%=link_to"Show",user_path(user.id) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
    </div>
    </main>

